{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "mongoose", "cors", "dotenv"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
